<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/fillBlue">
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/name_team_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="Team A name here"
        android:inputType="text"
        style="@style/EditTextInput"/>
    <EditText
        android:id="@+id/name_team_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="Team B name here"
        android:inputType="text"
        style="@style/EditTextInput"/>
    <EditText
        android:id="@+id/game_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="Set time here in minutes"
        android:inputType="number"
        style="@style/EditTextInput"/>
    <Button
        android:id="@+id/start_game"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/play_button"
        android:text="start game now"
        android:layout_margin="@dimen/dp10"
        android:padding="@dimen/dp10"
        android:backgroundTint="@color/fillGray"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
</ScrollView>